{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/shared/**/*",
    "src/sdk/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "src/renderer/src/*"
      ],
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@components/*": [
        "src/renderer/src/components/*"
      ],
      "@infra/*": [
        "src/renderer/src/infra/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@contracts/*": [
        "src/sdk/core/*"
      ],
      "@contracts": [
        "src/sdk/core/rpc.ts"
      ],
      "@sdk": [
        "src/sdk/index.ts"
      ],
      "@sdk/*": [
        "src/sdk/*"
      ]
    }
  }
}